<!-- create an edit product page with the retrieved product  -->

<%- include("../includes/head.ejs") %>

<body>

    <%- include("../includes/navigation.ejs") %>

<h1>Edit Product</h1>

<form>
    <input type="hidden" name="productId" value="<%= productId %>">
    <div class="form-control">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="<%= product.title %>">
    </div>
    <div class="form-control">
        <label for="price">Price</label>
        <input type="number" id="price" name="price" value="<%= product.price %>">
    </div>
    <div class="form-control">
        <label for="imageUrl">Image URL</label>
        <input type="text" id="imageUrl" name="imageUrl" value="<%= product.imageUrl %>">
        <input type="file" name="image" id="image" value="<%= product.imageUrl %>"> 
    </div>
    <div class="form-control">
        <label for="description">Description</label>
        <textarea id="description" name="description"><%= product.description %></textarea>
    </div>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>"> 
    <button type="button" onclick="updateProduct(this)">Edit Product</button>

</form>

</body>

</html>